test "replace":
	loop 9 times:
		set {_text::%loop-number%} to "My name is bob and this is my friend bob! Say hi, bob!"

	# Original Replace
	set {_text::1} to replace all "bob" with "bobby" in {_text::1}

	# Replace First
	set {_text::2} to replace first "bob" with "bobby" in {_text::2}

	# Replace Last
	set {_text::3} to replace last "bob" with "bobby" in {_text::3}


	# Case Sensitivity
	set {_text::4} to  replace all "bob" with "BOBBY" in {_text::4} with case sensitivity
	set {_text::5} to  replace all "BOB" with "bobby" in {_text::5} with case sensitivity
	set {_text::6} to  replace first "bob" with "BOBBY" in {_text::6} with case sensitivity
	set {_text::7} to  replace first "BOB" with "bobby" in {_text::7} with case sensitivity
	set {_text::8} to  replace last "bob" with "BOBBY" in {_text::8} with case sensitivity
	set {_text::9} to  replace last "BOB" with "bobby" in {_text::9} with case sensitivity
	assert {_text::1} is "My name is bobby and this is my friend bobby! Say hi, bobby!" with "Replace all failed"
	assert {_text::2} is "My name is bobby and this is my friend bob! Say hi, bob!" with "Replace first failed"
	assert {_text::3} is "My name is bob and this is my friend bob! Say hi, bobby!" with "Replace last failed"
	assert {_text::4} is "My name is BOBBY and this is my friend BOBBY! Say hi, BOBBY!" with "1st Replace all  failed with case sensitivity"
	assert {_text::5} is "My name is bob and this is my friend bob! Say hi, bob!" with "2nd Replace all  failed with case sensitivity"
	assert {_text::6} is "My name is BOBBY and this is my friend bob! Say hi, bob!" with "1st Replace first  failed with case sensitivity"
	assert {_text::7} is "My name is bob and this is my friend bob! Say hi, bob!" with "2nd Replace first  failed with case sensitivity"
	assert {_text::8} is "My name is bob and this is my friend bob! Say hi, BOBBY!" with "1st Replace last  failed with case sensitivity"
	assert {_text::9} is "My name is bob and this is my friend bob! Say hi, bob!" with "2nd Replace last  failed with case sensitivity"
