test "string cases":
	assert "Oops!" in lowercase is "oops!" with "lowercase failed"
	assert "Oops!" in uppercase is "OOPS!" with "uppercase failed"
	assert capitalised "Oops!" is "OOPS!" with "capitalised failed"
	assert "hellO i'm steve!" in proper case is "HellO I'm Steve!" with "lenient proper case failed"
	assert "hellO i'm steve!" in strict proper case is "Hello I'm Steve!" with "strict proper case failed"
	assert "spAwn neW boSs ()" in camel case is "spAwnNeWBoSs()" with "lenient camel case failed"
	assert "spAwn neW boSs ()" in strict camel case is "spawnNewBoss()" with "strict camel case failed"
	assert "geneRate ranDom numBer ()" in pascal case is "GeneRateRanDomNumBer()" with "lenient pascal case failed"
	assert "geneRate ranDom numBer ()" in strict pascal case is "GenerateRandomNumber()" with "strict pascal case failed"
	assert "Hello Player!" in snake case is "Hello_Player!" with "default snake case failed"
	assert "Hello Player!" in lower snake case is "hello_player!" with "lower snake case failed"
	assert "Hello Player!" in upper snake case is "HELLO_PLAYER!" with "upper snake case failed"
	assert "What is your name?" in kebab case is "What-is-your-name?" with "default kebab case failed"
	assert "What is your name?" in lower kebab case is "what-is-your-name?" with "lower kebab case failed"
	assert "What is your name?" in upper kebab case is "WHAT-IS-YOUR-NAME?" with "upper kebab case failed"
